lista_de_numeros = [1,34,56,2,77,100,450]
soma = 0

try:
     
for numero in lista_de_numeros:
soma += numero
print(f'Soma dos elemesntos = {soma}')

except Exception as e
print('Ocorreu um erro {e}')

lista_de_valores = [25, 33,78,99,100]
soma = 0

try:
     for valor in lista_de_valores:
        soma += valor 
        media = soma / len(lista_de_valores)
        print(f'A media da {lista_de_valores} é {media}')

except ZeroDivisionError:
     print('Não é possivel realizar a media pois a lista esta vazia')

except Exception as e:
     print('Ocorreu um erro')




