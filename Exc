def configurar_tempo_foco():
    tempo_foco = input(int("Defina seu tempo de foco (25 a 45 min): "))
    
    if 25 <= tempo_foco <= 45:
        print (f'Tempo de foco definido para' {tempo_foco} 'minutos, com sucesso')
    else:
    print('Defina um valor entre 25 e 45 minutos')



def verificar_numero():
        numero = input(int('Insira um numero:'))

        if numero % 2 == 0:
            print("O numero e par")
        else:
        print("O numero e impar")



def classificar_idade():
        idade = input(int("Digite sua idade: "))

        if 0 < idade <= 12:
        print("Crianca")
        
        elif 12 < idade <= 18:
            print("Adolescente")

        elif idade > 18:
        print("Adulto")

        else:
        print("Valor invalido")



